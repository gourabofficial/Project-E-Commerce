<!-- Main Content -->
<div class="w-full min-h-screen flex bg-gradient-to-r from-blue-50 to-purple-50">
  <!-- Sidebar -->
  <div class="w-[25%] p-8">
    <div class="flex flex-col space-y-4">
      <a href="#" class="text-gray-600 hover:text-blue-500 transition-all">All Products</a>
      <a href="#" class="text-gray-600 hover:text-blue-500 transition-all">Create New Product</a>
    </div>
  </div>

  <!-- Create Product Form -->
  <div class="w-[75%] bg-white p-8 shadow-lg">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Create New Product</h2>
    <form autocomplete="off" action="/product/create" method="post" enctype="multipart/form-data">
      <!-- Product Image -->
      <div class="mb-6">
        <label class="block text-lg font-semibold text-gray-800 mb-2">Product Image</label>
        <input
          name="image"
          type="file"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
          required>
      </div>

      <!-- Product Details -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Product Details</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input
            name="name"
            type="text"
            placeholder="Product Name"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required>
          <input
            name="price"
            type="text"
            placeholder="Product Price"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required>
          <input
            name="discount"
            type="text"
            placeholder="Discount Price"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required>
        </div>
      </div>

      <!-- Panel Details -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Panel Details</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input
            name="bgcolor"
            type="text"
            placeholder="Background Color"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required>
          <input
            name="panelcolor"
            type="text"
            placeholder="Panel Color"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required>
          <input
            name="textcolor"
            type="text"
            placeholder="Text Color"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required>
        </div>
      </div>

      <!-- Submit Button -->
      <button
        class="w-full px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition-all"
        type="submit">
        Create New Product
      </button>
    </form>
  </div>
</div>

