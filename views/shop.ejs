 <%- include('./partials/header') %>

<div class="w-full h-screen flex items-start px-20 py-20">
    <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2">
            <h3>Sort by</h3>
            <form action="/shop" method="GET">
                <select class="border-[1px] px-2 py-1" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
                <button type="submit" class="hidden"></button>
            </form>
        </div>

        <div class="flex flex-col mt-20">
            <a class="block w-fit mb-2" href="#">New Collection</a>
            <a class="block w-fit mb-2" href="#">All Products</a>
            <a class="block w-fit mb-2" href="#">Discounted Products</a>
        </div>

        <div class="mt-32">
            <a class="block w-fit mb-2" href="#">Filter by :</a>
            <a class="block w-fit mb-2" href="#">Availability</a>
            <a class="block w-fit mb-2" href="#">Discount</a>
        </div>
    </div>

    <div class="w-[75%] flex flex-col gap-5 h-screen">
        <% if (typeof products !== 'undefined' && products.length > 0) { %>
            <div class="grid grid-cols-3 gap-5">
                <% products.forEach(function(product) { %>
                    <div class="w-60">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor || '#f5f5f5' %>]">
                            <img 
                                class="h-[12rem]" 
                                src="<%= product.image ? 'data:image/jpeg;base64,' + product.image.toString('base64') : '/images/default.jpg' %>" 
                                alt="<%= product.name || 'Product Image' %>">
                        </div>
                        
                        <div class="flex justify-between bg-[<%= product.panelcolor || '#ffffff' %>] items-center px-4 py-4 text-[<%= product.textcolor || '#000000' %>]">
                            <div>
                                <h3><%= product.name || 'Unnamed Product' %></h3>
                                <h4>â‚¹ <%= product.price || '0' %></h4>
                            </div>
                            <a 
                                class="w-7 h-7 flex items-center justify-center rounded-full bg-white hover:bg-gray-200 transition-all" 
                                href="#">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="flex justify-center items-center h-full">
                <h2 class="text-2xl text-gray-500">No products available at the moment.</h2>
            </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %> 



