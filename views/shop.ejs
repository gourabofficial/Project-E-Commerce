<%- include('./partials/header') %>


<div class="w-full min-h-screen flex items-start px-10 py-20 bg-gray-50">

  <div class="w-[25%] flex flex-col items-start space-y-8 pr-8">
    
    <div class="w-full">
      <h3 class="text-lg font-semibold text-gray-800 mb-3">Sort By</h3>
      <form action="/shop" class="w-full">
        <select
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
          name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    
    <div class="w-full">
      <h3 class="text-lg font-semibold text-gray-800 mb-3">Categories</h3>
      <div class="flex flex-col space-y-2">
        <a href="#" class="text-gray-600 hover:text-blue-500 transition-all">New Collection</a>
        <a href="#" class="text-gray-600 hover:text-blue-500 transition-all">All Products</a>
        <a href="#" class="text-gray-600 hover:text-blue-500 transition-all">Discounted Products</a>
      </div>
    </div>

    
    <div class="w-full">
      <h3 class="text-lg font-semibold text-gray-800 mb-3">Filter By</h3>
      <div class="flex flex-col space-y-2">
        <a href="#" class="text-gray-600 hover:text-blue-500 transition-all">Availability</a>
        <a href="#" class="text-gray-600 hover:text-blue-500 transition-all">Discount</a>
      </div>
    </div>
  </div>


  <div class="w-[75%]">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% products.forEach(function(product){ %>
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-all">
          <!-- Product Image -->
          <div class="w-full h-64 flex items-center justify-center bg-[<%= product.bgcolor %>]">
            <img
              class="h-48 object-cover"
              src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
              alt="<%= product.name %>"
            />
          </div>

         
          <div class="p-4 bg-[<%= product.panelcolor %>]">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="text-lg font-semibold text-[<%= product.textcolor %>]">
                  <%= product.name %>
                </h3>
                <h4 class="text-gray-600">â‚¹ <%= product.price %></h4>
              </div>
              <a
                href="/addtocart/<%= product._id %>"
                class="w-8 h-8 flex items-center justify-center rounded-full bg-white hover:bg-gray-100 transition-all"
              >
                <i class="ri-add-line text-gray-600"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>