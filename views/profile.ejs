<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-start px-10 py-20 bg-gray-50">
  <div class="w-full max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">My Profile</h1>

    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center space-x-6 mb-6">
        <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden">
          <% if (user.picture) { %>
            <img src="<%= user.picture %>" alt="Profile Picture" class="w-full h-full object-cover" />
          <% } else { %>
            <i class="ri-user-line text-3xl text-gray-600"></i>
          <% } %>
        </div>

        
        <div>
          <h2 class="text-2xl font-semibold text-gray-800"><%= user.fullname %></h2>
          <p class="text-gray-600"><%= user.email %></p>
        </div>
      </div>

      <div class="space-y-4">
        <div>
          <h3 class="text-lg font-semibold text-gray-800">Contact Information</h3>
          <p class="text-gray-600">Email: <%= user.email %></p>
          <p class="text-gray-600">Phone: <%= user.contact || 'Not provided' %></p>
        </div>

       
    </div>
  </div>
</div>

