<%- include('./partials/header') %>

<!-- Main Content -->
<div class="w-full min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-50 to-purple-50">
  <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
    <h4 class="text-2xl font-bold text-gray-800 mb-6">Admin Access</h4>
    <form action="/create" method="post">
      <input
        class="w-full px-4 py-3 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        type="email" placeholder="Email" name="email" required>
      <input
        class="w-full px-4 py-3 mb-6 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        type="password" placeholder="Password" name="password" required>
      <button
        class="w-full px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition-all"
        type="submit">
        Login
      </button>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>