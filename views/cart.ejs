<%- include('./partials/header') %>

<!-- Main Content -->
<div class="w-full min-h-screen flex items-start px-20 py-20 bg-gradient-to-r from-blue-50 to-purple-50">
  <!-- Cart Items -->
  <div class="w-[30%] bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="w-full h-64 bg-yellow-500"></div>
    <div class="p-6">
      <h3 class="text-2xl font-bold text-gray-800 mb-4">Clinge Bag</h3>
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-2">
          <button class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-100 hover:bg-gray-200 transition-all">
            <i class="ri-subtract-line text-gray-600"></i>
          </button>
          <span class="px-4 py-2 bg-gray-100 rounded-lg">01</span>
          <button class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-100 hover:bg-gray-200 transition-all">
            <i class="ri-add-line text-gray-600"></i>
          </button>
        </div>
        <span class="text-lg font-semibold text-gray-800">₹ 1200</span>
      </div>
      <div class="flex items-center justify-between">
        <h4 class="text-lg text-gray-600">Net Total</h4>
        <h2 class="text-lg font-bold text-gray-800">₹ 1200</h2>
      </div>
    </div>
  </div>

  <!-- Price Breakdown -->
  <div class="w-[70%] bg-white rounded-xl shadow-lg p-8 ml-8">
    <h3 class="text-2xl font-bold text-gray-800 mb-6">Price Breakdown</h3>
    <div class="space-y-4">
      <div class="flex justify-between">
        <h4 class="text-lg text-gray-600">Total MRP</h4>
        <h4 class="text-lg text-gray-800">₹ 1920</h4>
      </div>
      <div class="flex justify-between">
        <h4 class="text-lg text-gray-600">Discount on MRP</h4>
        <h4 class="text-lg text-gray-800">₹ 0</h4>
      </div>
      <div class="flex justify-between">
        <h4 class="text-lg text-gray-600">Platform Fee</h4>
        <h4 class="text-lg text-gray-800">₹ 20</h4>
      </div>
      <div class="flex justify-between">
        <h4 class="text-lg text-gray-600">Shipping Fee</h4>
        <h4 class="text-lg text-gray-800">FREE</h4>
      </div>
    </div>
    <div class="w-full h-px bg-gray-300 my-6"></div>
    <div class="flex justify-between">
      <h3 class="text-xl font-bold text-gray-800">Total Amount</h3>
      <h3 class="text-xl font-bold text-green-600">₹ 1940</h3>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>